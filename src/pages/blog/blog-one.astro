---
import { getCollection } from "astro:content";
const allPosts = await getCollection("posts");
import BaseLayout from "@/layouts/BaseLayout.astro";
import EntriesOne from "@/components/blog/EntriesOne.astro";
const tags = [...new Set(allPosts.map((post) => post.data.tags).flat())];
---

<BaseLayout>
  <section class="bg-neutral-100">
    <div class="mx-auto max-w-7xl px-6 lg:flex lg:px-8 py-20">
      <div class="lg:ml-96 lg:flex lg:w-full lg:justify-end lg:pl-32">
        <div class="mx-auto max-w-lg lg:mx-0 lg:w-0 lg:max-w-xl lg:flex-auto">
          <h1 class="font-display text-5xl font-medium text-kotei-800">
            Our blog
          </h1>
          <ol
            role="list"
            class="flex flex-wrap gap-3 mt-4">
            {
              tags.map((tag) => (
                <li class="text-neutral-500 text-xs hover:text-kotei-800 ">
                  <a
                    title={tag}
                    aria-label={tag}
                    href={`/tags/${tag}`}>
                    {tag}{" "}
                  </a>{" "}
                </li>
              ))
            }
          </ol>
          <ul
            class="grid grid-cols-1 mt-12 sm:grid-cols-2 gap-x-3 gap-y-24 lg:gap-x-4">
            {
              allPosts.slice().map((post) => (
                <EntriesOne
                  url={"/posts/" + post.slug}
                  title={post.data.title}
                  description={post.data.description}
                  alt={post.data.title}
                  pubDate={post.data.pubDate.toString().slice(0, 10)}
                  author={post.data.author}
                  image={post.data.image.url}
                />
              ))
            }
          </ul>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
